{
  "name": "xor",
  "version": "1.0.0",
  "description": "A demonstration project for Purple Technologies",
  "main": "index.js",
  "author": "Jiri kantor <mgrjirikantor@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "configuration/*",
    "frontend/**",
    "api/**",
    "cli"
  ],
  "scripts": {
    "dev:start": "cross-env NODE_ENV=development run-s dev:run",
    "dev:run": "lerna run watch --scope @xor/dev-xor --include-dependencies --parallel",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "lint": "lerna run lint --stream",
    "lint:commits": "xor lint-commits",
    "verify": "run-s lint clean build lint:commits",
    "merge": "xor merge -b"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@xor/cli": "^1.0.0-pre",
    "@xor/commitlint-config": "^1.0.0-pre",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "14.18.1",
    "npm": "6.14.15"
  }
}
