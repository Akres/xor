{
  "name": "xor",
  "version": "1.0.0",
  "description": "A demonstration project for Purple Technologies",
  "main": "index.js",
  "author": "Jiri kantor <mgrjirikantor@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "configuration/*",
    "frontend/**",
    "api/**",
    "cli"
  ],
  "scripts": {
    "dev:ui:start": "cross-env NODE_ENV=development run-s dev:ui:run",
    "dev:ui:run": "lerna run watch --scope @xor/dev-xor --include-dependencies --parallel",
    "live:ui:start": "cross-env NODE_ENV=production run-s live:ui:build live:ui:run",
    "live:ui:build": "lerna run build --scope @xor/live-xor --include-dependencies --parallel",
    "live:ui:run": "lerna run start --scope @xor/live-xor --stream",
    "mock:api:start": "cross-env NODE_ENV=development run-s mock:api:build mock:api:run",
    "mock:api:build": "lerna run build --scope @xor/mock-xor-api --include-dependencies --parallel",
    "mock:api:run": "lerna run start --scope @xor/mock-xor-api --stream",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --stream",
    "lint": "lerna run lint --stream",
    "lint:commits": "xor lint-commits",
    "verify": "run-s package:dedupe lint clean build lint:commits",
    "merge": "xor merge -b",
    "package:dedupe": "yarn-deduplicate -s fewer yarn.lock"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@xor/cli": "^1.0.0-pre",
    "@xor/commitlint-config": "^1.0.0-pre",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "yarn-deduplicate": "^3.1.0"
  },
  "engines": {
    "node": "14.18.1",
    "npm": "6.14.15"
  }
}
